# Default for majority of files
* text=auto

# Strictly windows \n\r files
*.{cmd} text eol=crlf
*.{bat} text eol=crlf
*.{ps1} text eol=crlf
*.{sln} text eol=crlf
*.{props} text eol=crlf
*.{vcxproj} text eol=crlf

# Strictly linux \n files
*.{bash,sh} text eol=lf

# Binaries to be handles with git lfs (avoid bloated vcs)
*.7z filter=lfs diff=lfs merge=lfs -text
*.exe filter=lfs diff=lfs merge=lfs -text
*.gif filter=lfs diff=lfs merge=lfs -text
*.gz filter=lfs diff=lfs merge=lfs -text
*.ico filter=lfs diff=lfs merge=lfs -text
*.jpg filter=lfs diff=lfs merge=lfs -text
*.otf filter=lfs diff=lfs merge=lfs -text
*.pdf filter=lfs diff=lfs merge=lfs -text
*.png filter=lfs diff=lfs merge=lfs -text
*.tar filter=lfs diff=lfs merge=lfs -text
*.ttf filter=lfs diff=lfs merge=lfs -text
*.woff2 filter=lfs diff=lfs merge=lfs -text
*.zip filter=lfs diff=lfs merge=lfs -text
*.ico filter=lfs diff=lfs merge=lfs -text
*.jar filter=lfs diff=lfs merge=lfs -text
*.db filter=lfs diff=lfs merge=lfs -text
*.pkl filter=lfs diff=lfs merge=lfs -text
*.pickle filter=lfs diff=lfs merge=lfs -text
*.pyc filter=lfs diff=lfs merge=lfs -text
*.pyd filter=lfs diff=lfs merge=lfs -text
*.pyo filter=lfs diff=lfs merge=lfs -text
*.slo filter=lfs diff=lfs merge=lfs -text
*.obj filter=lfs diff=lfs merge=lfs -text
*.so filter=lfs diff=lfs merge=lfs -text
*.dll filter=lfs diff=lfs merge=lfs -text
*.lib filter=lfs diff=lfs merge=lfs -text
*.out filter=lfs diff=lfs merge=lfs -text

# Get more meaningful diffs for common file types
*.cs diff=csharp
*.css diff=css
*.html diff=html
*.el diff=lisp
*.ex diff=elixir
*.exs diff=elixir
*.fs diff=fsharp
*.fsx diff=fsharp
*.go diff=golang
*.html diff=html
*.gradle diff=java
*.java diff=java
*.js diff=javascript
*.jsx diff=javascript
*.json diff=json
*.php diff=php
*.pl diff=perl
*.py diff=python
*.md diff=markdown
*.rb diff=ruby
*.rake diff=ruby
*.rs diff=rust
*.scss diff=css
*.xml diff=html

