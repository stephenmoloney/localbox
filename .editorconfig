root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_size = 2
indent_style = space
trim_trailing_whitespace = true

[Dockerfile]
indent_size = 4

[*.sh]
indent_size = 4

[*.{dockerfile,Dockerfile,vimrc,vim,bashrc}]
indent_size = 4

[gitconfig]
indent_size = 8

[Makefile]
indent_style = tab
indent_size = 4

[*.md]
max_line_length = off

